{
  "include": [
    "./src/**/*",
    "./node_modules/react-native-gesture-handler/lib/typescript/**/*.ts"
  ],
  "compilerOptions": {
    "jsx": "preserve",
    "target": "esnext",
    "module": "esnext",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "react-native-gesture-handler": [
        "./node_modules/react-native-gesture-handler/lib/typescript"
      ]
    },
    "lib": [
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],
  "references": [
    {
      "path": "./tsconfig.json"
    }
  ]
}